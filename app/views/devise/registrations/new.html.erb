<h2>Sign Up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, required: true, label: "First Name" %>
    <%= f.input :last_name, required: true, label: "Last Name" %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true, label: "Password Confirmation" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign Up", notice:"Welcome! You have successfully signed up!" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
