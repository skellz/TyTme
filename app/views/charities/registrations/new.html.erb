<h2>New Charity Sign Up</h2>
<% if charity_signed_in? == false %>
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-inputs">
      <%=f.input :name, label: 'Orginization Name' %>
      <%=f.input :email %>
      <%=f.input :address %>
      <%=f.input :city %>
      <%=f.input :state, collection: Country['US'].states.keys %>
      <%=f.input :zip_code, label: 'Zip Code' %>
      <%=f.input :country, collection: ['United States'] %>
      <%=f.input :phone_number %>
      <%=f.input :fax_number %>
      <div>
        <%= f.label :charity_photo, "Charity Photo" %>
        <%= f.file_field :charity_photo %>
      </div>
      <%=f.input :password %>
      <%=f.input :password_confirmation, label: 'Password Confirmation' %>
    </div>

    <div class="form-inputs">
      <%= f.button :submit, 'Charity Sign Up' %>
    </div>
  <% end %>
<% end %>

<%= render "charities/shared/links" %>