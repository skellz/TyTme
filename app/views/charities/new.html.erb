<h2>New Charity Sign Up</h2>
<% c = Country.new('US') %>

<%= simple_form_for @charity do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name , label: 'Orginization Name', required: true %>
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :address, required: true %>
    <%= f.input :city, required: true %>
    <%= f.input :country, collection: ['United States'], required: true %>
    <%= f.input :state, collection: c.states.keys, required: true %>
    <%= f.input :zip_code, label: 'Zip Code', required: true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, label: 'Password Confirmation', :required => true %>
    <%= f.button :submit, 'Charity Sign Up' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
